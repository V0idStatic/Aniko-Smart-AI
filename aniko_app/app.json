{
  "expo": {
    "name": "aniko_app",
    "scheme": "aniko_app",
    "slug": "aniko_app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to diagnose plant diseases.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload plant images."
      }
    },
    "android": {
      "permissions": ["CAMERA", "READ_EXTERNAL_STORAGE"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    
    "plugins": [
      "expo-router",
      "expo-image-picker"
    ],
     "extra": {
      "openrouterApiKey": "$EXPO_PUBLIC_OPENROUTER_API_KEY"
    }
  }
}
